<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialsSample.Views.MainView"
             Title="Xamarin.Essentials Sample">
    <ContentPage.Content>
        <StackLayout>
            <Button
                Text="Get Battery State"
                Command="{Binding GetBatteryStateCommand}" />
            <Label 
                Text="{Binding BatteryState}"
                FontSize="Large"
                HorizontalOptions="Center"
                Margin="12"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>